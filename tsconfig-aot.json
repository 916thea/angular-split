{
  "compilerOptions": {
    "target": "ES5",
    "module": "es2015",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "noEmitHelpers": false,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "declaration": true,
    "outDir": "dist",
    "lib": [
      "es6",
      "es2015",
      "dom"
    ]
  },
  "files": [
    "src/index.ts",
    "src/angularSplit.module.ts",
    "src/split.component.ts",
    "src/splitGutter.directive.ts",
    "src/splitArea.directive.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "angularCompilerOptions": {
      "genDir": "aot",
      "skipMetadataEmit" : false
 }
}